<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SOERAK_1" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/merah</item>
        <item name="colorPrimaryVariant">@color/putih</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondaryVariant">@color/hijau</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="login_soerak">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#C00000</item>
    </style>

    <style name="lupa_akun">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#C00000</item>
    </style>

    <style name="Theme.SOERAK_1.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SOERAK_1.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SOERAK_1.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>